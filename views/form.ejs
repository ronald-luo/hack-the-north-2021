    </main>

<script>
  const button = document.getElementById('singlebutton')

  button.addEventListener('click', () => {
    const endpoint = '/add-cal'
            fetch(endpoint, {
                method: 'post'
            })
            .then(response => response.json())
            .then(data => window.location.href = data.redirect)
            .catch(err => console.log(err))
  })
</script>

