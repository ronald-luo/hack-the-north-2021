            </div>
            
            <!-- Text input-->
            <div class="form-group">
              <label class="col-md-4 control-label" for="textinput">Refills</label>  
              <div class="col-md-4">
              <input id="textinput" name="textinput" type="text" class="form-control input-md" value="<%= drug.refills %>">
                
              </div>
            </div>
            
